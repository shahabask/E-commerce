<script>
  $(document).ready(function() {
  $('#exampleModalCenter').modal('hide'); // Hide the modal by default
});
document.addEventListener('DOMContentLoaded',()=>{
    const statusButtons = document.querySelectorAll('.status-button');
    statusButtons.forEach(button => {
      button.addEventListener('click', (event) => {
        event.preventDefault();
        const orderId = button.dataset.orderId; // Get the order ID from the button's data attribute
        openModal(orderId); // Open the modal with the order ID
      });
    });
  });
  // Function to set the order ID and open the modal
  function openModal(orderId) {
    document.getElementById('orderDetails').value = orderId; // Set the order ID
    const modal = new bootstrap.Modal(document.getElementById('exampleModalCenter')); // Initialize the modal
    modal.show(); // Open the modal
  }

  // Event listener for the status button click 



  // Event listener for form submission
  document.getElementById('statusForm').addEventListener('submit', (event) => {
    const selectedStatus = document.getElementById('statusSelect').value; // Get the selected status
    document.getElementById('statusSelect').value = selectedStatus; // Update the value to submit
    const orderId = document.getElementById('orderDetails').value; // Get the order ID
    document.getElementById('orderDetails').value = orderId; // Update the value to submit
