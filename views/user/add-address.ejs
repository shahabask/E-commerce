  <div class="container">
    <div class="address-form-container">
      <h4>Add Address</h4>
      <form action="/saveaddress" method="post">
        <div class="form-group">
          <label for="street">Address line</label>
          <input type="text" id="address" name="head" placeholder="Enter your street">
        </div>
        <div class="form-group">
          <label for="street">Street</label>
          <input type="text" id="street" name="street" placeholder="Enter your street">
        </div>
        <div class="form-group">
          <label for="city">City</label>
          <input type="text" id="city" name="city" placeholder="Enter your city">
        </div>
        <div class="form-group">
          <label for="city">Landmark</label>
          <input type="text" id="landmark" name="landmark" placeholder="Enter the landmark">
        </div>
        <div class="form-group">
          <label for="city">Pincode</label>
          <input type="number" id="pincode" name="pincode" placeholder="Enter your pincode">
        </div>
        <div class="form-group">
          <label for="country">State</label>
          <input type="text" id="state" name="state" placeholder="Enter your state">
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          <input type="text" id="country" name="country" placeholder="Enter your country">
        </div>
        <button type="submit" class="save-button">Save</button>
      </form>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

