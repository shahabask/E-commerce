    <div class="container">
        <h2>Edit Profile</h2>
        
        <form action="/editprofile" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">FirstName:</label>
                <input type="text" value="<%=user.firstName%>" id="name" name="firstName" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="name">LastName:</label>
                <input type="text" value="<%=user.lastName%>" id="name" name="lastName" placeholder="Enter your name" >
            </div>
           
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="text" value="<%=user.phone%>" id="phone" name="phone" placeholder="Enter your phone number">
            </div>
            
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" value="<%=user.email%>" id="email" name="email" placeholder="Enter your email" >
            </div>
            <div>
                <label for="">upload profile photo</label>
               <input type="file" name="image" >
            </div>
            <div class="form-group">
                <button class="btn btn-back"><a href="/userprofile" style="text-decoration: none;color: black;">Back</a></button>
                <button class="btn" type="submit">Save</button>
            </div>
            
                 
                
               
              
        </form>
