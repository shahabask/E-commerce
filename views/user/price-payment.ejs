<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #f5deb3;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            display: flex;
            justify-content: space-between;
        }

        .product-details,
        .payment-details {
            flex: 1;
        }

        .product-details h2,
        .payment-details h2 {
            color: #8b4513;
            margin-bottom: 20px;
        }

        .product-details p,
        .payment-details p {
            color: #333;
            margin-bottom: 10px;
        }

        .product-image {
            width: 50px;
            height: 50px;
            border-radius: 10%;
            object-fit: cover;
        }

        .total-amount {
            text-align: right;
            flex: 0 0 200px;
        }

        .total-amount h2 {
            color: #8b4513;
            margin-bottom: 20px;
        }

        .total-amount h4 {
            color: #333;
            margin-bottom: 10px;
        }

        .payment-options {
            background-color: #8b4513;
            color: #fff;
            padding: 10px;
            border-radius: 5px;
            margin-top: 20px;
        }

        .payment-options h2 {
            color: #fff;
            margin-bottom: 10px;
        }

        .payment-options label {
            display: block;
            margin-bottom: 10px;
        }

        .place-order-button {
            margin-top: 20px;
            background-color: #8b4513;
            color: #fff;
            border: none;
        }

        .place-order-button:hover {
            background-color: #654321;
        }

        .order-animation {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin-top: 50px;
            text-align: center;
            opacity: 0;
            transform: translateY(20px);
            animation: slideIn 0.5s ease-in-out forwards;
        }

        @keyframes slideIn {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-details">
            <h2>Product Details</h2>
            <% for(let i=0;i<products.length;i++){%>
                <img class="product-image" src="/public/adminimage/<%=products[i].image%>" alt="Product Image">
           <p><%=products[i].modelName%></p>
            <p>Qty: <%=products[i].quantity%></p>
            <p>Price: <%=products[i].price%></p>
     

          <%  }%>
            
            
        </div>

        <div class="payment-details">
            <div class="payment-card">
                <div class="card-header">
                    <h2>Payment Details</h2>
                </div>
                <div class="card-body">
                    <!-- <p>Discount: $10</p> -->
                    <h6>Total: <%=total%></h6>
                    <!-- <p>Coupon Applied: ABC123</p> -->
                    <p>Delivery Charges: <%=shipping%></p>
                </div>
            </div>

            <div class="total-amount">
                <h2>Total Amount</h2>
                <h4>Total Price: <%=grandTotal%></h4>
            </div>
           <form action="/orderplaced" method="post">
            <div class="payment-options">
                <h2>Select Payment Option</h2>
                <input type="text" value="<%=total%>" name="total" hidden> 
                <input type="text" value="<%=shipping%>" name="shipping" hidden> 
                <input type="text" value="<%=grandTotal%>" name="grandTotal" hidden> 
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="cashOnDelivery" value="cashOnDelivery" checked>
                    <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="creditCard" value="creditCard">
                    <label class="form-check-label" for="creditCard">Credit Card</label>
                </div>
            </div>
             <input type="submit" class="btn btn-block place-order-button" onclick="placeOrder()" value="Place Your Order">
            <!-- <button  ><a href="/userorder" style="text-decoration: none;color: #fff;"></a> </button> -->
        </form>
        </div>
    </div>

    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function placeOrder() {
        
           

            // Hide container
            const container = document.querySelector('.container');
            container.style.display = 'none';

            // Simulate delay before showing success message
            setTimeout(function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Order Placed Successfully!',
                    showConfirmButton: false,
                    timer: 3000
                });
            }, 2000);
        }
    </script>
</body>
</html>
