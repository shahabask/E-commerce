    <style>
        body {
            background-color: #f8f9fa;
        }

        .order-container {
            max-width: 800px;
            margin: 50px auto;
            margin-top: 100px;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 5px;
        }

        .order-status {
            font-weight: bold;
            color: #28a745;
        }

        .order-history {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
        }

        .order-history-item {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container order-container">
        <h1>Order Details</h1>

        <div class="row">
           <% for(let i=0;i<orders.length;i++){%>
               <div class="col-md-4">
                <img src="/public/adminimage/<%=orders[i].image%>" alt="Product Image" class="product-image">
            </div>
            <div class="col-md-8">
         
                
                <p>Price: <%=orders[i].price%></p>
                <p>Quantity: <%=orders[i].quantity%></p>
                <p>Total: <%=orders[i].total%></p>
                <p>Status: <span class="order-status"><%=orders[i].status%></span></p>
             
                <%if(orders[i].status==='cancelled'){%>

                    <%}else{%>
    <button class="btn btn-danger"> <a href="/cancelorder?size=<%=orders[i].size%>&color=<%=orders[i].color%>&name=<%=orders[i].name%>" style="text-decoration: none;color: white;"> Cancel Order</a> </button>
                          
                   <%}%>
                
                </div>
            <hr>
         <%}%>
         
       

