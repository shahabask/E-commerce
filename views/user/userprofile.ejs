<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
   
  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">

<script src="https://kit.fontawesome.com/adbc531ad5.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-image: url('/public/userImage/');
            
             color: #ffffff;
            background-size: cover;
        }

        .profile-container {
            max-width: 600px;
            margin: 50px auto;
            margin-top: 100px;
            background-color:  #36454F ;
            color: rgb(252, 251, 251);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            
        }

        .profile-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }

        .address-section {
            background: black;
            color: rgb(255, 254, 254);
            background-color: rgba(135, 132, 132, 0.425);
            padding: 20px;
            border-radius: 5px;
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .address-section h4 {
            color: rgb(250, 250, 250);
        }

        .home-icon {
            font-size: 30px;
            color: #4f9deb;
            margin-right: 10px;
        }

    </style>
    <style>
        /* Existing CSS styles */
      
        /* Additional CSS for the navbar */
        .navbar-custom {
          background-color: #070707; /* Customize the background color */
        }
      
        .navbar-custom .navbar-brand {
          font-size: 1.5rem;
          font-weight: bold;
          margin-right: 20px;
        }
      
        .navbar-custom .navbar-toggler {
          border-color: rgba(255, 255, 255, 0.5); /* Customize the navbar toggler color */
        }
      
        .navbar-custom .navbar-toggler-icon {
          background-color: #ffffff; /* Customize the navbar toggler icon color */
        }
      
        .navbar-custom .nav-item .nav-link {
          font-size: 1rem;
          margin-right: 10px;
          color: black;
        }
      
        .navbar-custom .btn-primary {
          background-color: #ff4081; /* Customize the primary button color */
          border-color: #ff4081; /* Customize the primary button border color */
          margin-left: 10px;
        }
      </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <a class="navbar-brand mx-5" href="/">
          Golon Sports
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
           
            <li class="nav-item ms-3">
              <a class="nav-link" href="/usercart">
                <i class="bi bi-cart-plus text-light"></i>       
              </a>
            </li>
            <li class="nav-item ms-3">
              <a class="nav-link" href="#">
                <i class="bi bi-heart text-light"></i> 
              </a>
            </li>
            <li class="nav-item ms-3">
              <a class="nav-link" href="#">
                <i class="bi bi-telephone text-light"></i> 
              </a>
            </li>
            <li class="nav-item ms-3">
              <a class="nav-link" href="/userprofile">
                <i class="bi bi-person-fill profile-icon text-light"></i> 
              </a>
            </li>
            <li class="nav-item">
              <a href="/logout" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right"></i> LogOut 
              </a>
            </li>
          </ul>
        </div>
      </nav>

    <div class="container-fluid float-left" style="margin-top: -30px; ">
        <div class="btn float-left" style="background-color: #FCC114; border-color: #FCC114">
            <a href="/userorder" style="text-decoration: none; color: black;"><i class="bi bi-box-seam"> MY ORDER </i>
            </a>
        </div>
    </div>


    <div class="container profile-container">

        <div class="text-center">
            <img src="/public/userImage/<%=user.image%>" alt="Profile Photo" class="profile-photo">
            <h3 class="mt-3">Name:  <%=user.firstName%> <%=user.lastName%></h3>
            <p>Email: <%=user.email%></p>
            <p>Phone: +91 <%=user.phone%></p>
            <!-- <p>Joined: January 1, 2023</p> -->
           <a href="/editprofile" style="text-decoration: none;"><i class="fas fa-edit edit-icon" style="color: #fdfbfb;"></i></a> 
        </div>

        
          
         <% if(address.length<=0) { %>
          <div class="address-section">
          <h4>Address</h4>
           <p>please add your address</p>
           <a href="/addaddress" class="btn btn-light float-right" style="text-align:justify;">Add address</a> </div>
       <% }else{%>
        
        <% for(let i=0;i<address.length;i++){ %>
          <div class="address-section">
          <h4>Address <%=i+1%></h4>
          <p>Address line: <%=address[i].head%></p>
          <p>City: <%=address[i].city%></p>
          <p>Pincode: <%=address[i].pincode%></p>
          <p>State: <%=address[i].state%></p>
          <p>Country: <%=address[i].country%></p>
          <a href="/editaddress?index=<%=i%>" ><i class="fas fa-edit edit-icon" style="color: #fefdfd;"></i></a>
          <div style="text-align: center;">
            <a href="/deleteaddress?id=<%=user._id%>&index=<%=i%>" class="btn btn-danger ">Delete</a>
          </div>
         
          <% if(i==address.length-1){%>
          <a href="/addaddress" class="btn btn-light float-right">Add address</a>
       <%  }  %>
          
      </div>

       <% } %>
       


       <%}%>
       
           
         
        <div class="text-center mt-4">
            <a href="/" class="home-icon" style="color: #f9f8f8;"><i class="fas fa-home"></i></a>
          

</div></div></body></html>